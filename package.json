{
    "name": "messenger",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "husky": {
        "hooks": {
            "pre-commit": "npm run test && lint",
            "pre-push": "npm run build"
        }
    },
    "scripts": {
        "dev": "vite",
        "prebuild": "tsc --noEmit",
        "build": "npm run prebuild && vite build",
        "preview": "vite preview",
        "start": "tsc && vite build && node server.js",
        "lint": "stylelint \"**/*.css\"",
        "lint:fix": "stylelint '**/*{.css,.scss}' --fix",
        "test": "mocha"
    },
    "devDependencies": {
        "@types/chai": "^4.3.11",
        "@types/mocha": "^10.0.6",
        "@types/sinon": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "chai": "^5.1.0",
        "eslint": "^8.56.0",
        "eslint-config-airbnb": "^19.0.4",
        "express": "^4.18.2",
        "husky": "^9.0.11",
        "jsdom": "^24.0.0",
        "mocha": "^10.3.0",
        "sinon": "^17.0.1",
        "stylelint": "^16.1.0",
        "stylelint-config-standard": "^36.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.2.2",
        "vite": "^5.0.8"
    },
    "dependencies": {
        "handlebars": "^4.7.8",
        "nanoid": "^5.0.4"
    },
    "engines": {
        "node": ">=12.1.0"
    }
}
